@model Situation
@{
    ViewData["Title"] = "Update";
}
<h2>Durum Güncelleme Sayfası</h2>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-6">
                <div class="form-group">
                    <form method="post" asp-antiforgery="true">
                        <input type="hidden" asp-for="SituationId" />
                        <label>Durum Adı</label>
                        <input type="text" asp-for="SituationName" />
                        <span asp-validation-for="SituationName" class="text-danger"></span>
                        <br />
                        <button type="submit" class="btn btn-warning">Durum Güncelle</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>