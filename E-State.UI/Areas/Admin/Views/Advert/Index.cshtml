@model List<Advert>
@{
    ViewData["Title"] = "Index";
}
@if (Model.Count == 0)
{
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="alert alert-success">Sitede herhangi bir ilan bulunamamaktadır.</div>
            </div>
        </div>
    </div>
}
else
{
    <table class="table table-bordered table table-striped">
        <tr>
            <th>Açıklama</th>
            <th>Fiyat</th>
            <th>Oda Sayısı</th>
            <th>Banyo Sayısı</th>
            <th>Alanı</th>
            <th>Kat</th>
            <th>Adres</th>
            <th>İlan Resimleri</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Descriptions</td>
                    <td>@item.Price</td>
                    <td>@item.NumberOfRooms</td>
                    <td>@item.BathroomNumbers</td>
                    <td>@item.Area</td>
                    <td>@item.Floor</td>
                    <td>@item.Address</td>
                    <td><a class="btn btn-success" asp-action="AdvertImages" asp-route-id="@item.AdvertId">İlan Resimleri</a></td>
                    <td><a class="btn btn-danger" data-id="@item.AdvertId" id="delete-@item.AdvertId">Sil</a></td>
                    <td><a class="btn btn-primary" asp-action="Update" asp-route-id="@item.AdvertId">Güncelle</a></td>

                </tr>
            }
        </tbody>
    </table>
}
<br />
<a class="btn btn-primary" asp-action="Create">İlan Ekle</a>

<script type="text/javascript">
    $(document).ready(function () {
        $("a[id^='delete-']").click(function () {
            var id = $(this).data("id");
            var row = $(this).closest("tr");

            swal({
                title: "Silmek İstiyor musunuz ?",
                text: "İlan Silinecek silmek istediğinize emin misiniz!",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
            .then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        type: "GET",
                        url: "/Admin/Advert/Delete/" + id,
                        success: function () {
                            toastr.error("İlan silme işlemi başarıyla gerçekleşti.");
                            row.remove();
                        },
                        error: function () {
                            toastr.error("İlan silme işlemi sırasında bir hata oluştu.");
                        }
                    });
                }
            });
        });
    });
</script>

