@model ResetPasswordModel
@{
    Layout = null;
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">

@if (ViewBag.state == null)
{
    <div class="form-gap"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="text-center">
                            <h3><i class="fa fa-lock fa-4x"></i></h3>
                            <h2 class="text-center">Şifremi Unuttum?</h2>
                            <p>Şifrenizi buradan sıfırlayabilirsiniz.</p>
                            <div class="panel-body">

                                <form class="form" method="post" asp-action="ResetPassword">

                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                            <input placeholder="E-Posta Adresiniz" class="form-control" type="email" asp-for="Email">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input class="btn btn-lg btn-primary btn-block" value="Şifreyi Sıfırla" type="submit">
                                    </div>


                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    if (ViewBag.state)
    {
        @:<div class="alert alert-success">Şifre Talebi İçin E-Posta Adresinize Bilgilendirici Mail Gönderilmiştir.</div>
    }
    else
    {
        @:<div class="alert alert-danger">Böyle Bir E-Posta Adresi Bulunmamaktadır.</div>
    }
}

<style>
    .form-gap {
        padding-top: 70px;
    }
</style>
